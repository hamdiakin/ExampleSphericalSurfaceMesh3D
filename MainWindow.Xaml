<Window x:Class="InteractiveExamples.ExampleSphericalSurfaceMesh3D"
Title="ExampleSphericalSurfaceMesh3D / NET8 WPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InteractiveExamples"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#202020">
    <Grid Name="gridBase">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Name="gridChart"/>
        <Grid Margin="8" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="1">
                <CheckBox Name="checkBoxSphericalGrid" Checked="CheckBoxSphericalGridCheckedChanged" Unchecked="CheckBoxSphericalGridCheckedChanged" IsChecked="True" Foreground="White">Spherical grid</CheckBox>
                <CheckBox Name="checkBoxHeadingGrid" Checked="CheckBoxHeadingGridCheckedChanged" Unchecked="CheckBoxHeadingGridCheckedChanged" IsChecked="True" Foreground="White">Heading grid</CheckBox>
            </StackPanel>
            <Grid Margin="0,8,0,0" VerticalAlignment="Top" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Width:" Height="28" Name="label2" Grid.Row="0" Grid.Column="0" Foreground="White"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Height="23" Width="32" x:Name="textBoxExWidth" TextChanged="TextBoxExWidthTextChanged"/>
                    <Button Grid.Row="0" Grid.Column="3" Content="Top view 2D" Name="buttonTopView2D" Click="ButtonTopView2DClick" Margin="2" />
                    <Label Grid.Row="1" Grid.Column="0" Content="Height:" Height="28" Name="label3" Foreground="White"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Height="23" Width="32" x:Name="textBoxExHeight" TextChanged="TextBoxExHeightTextChanged"/>
                    <Label Grid.Row="2" Grid.Column="0" Content="Depth:" Height="28" Name="label4" Foreground="White"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Height="23" Width="32" x:Name="textBoxExDepth" TextChanged="TextBoxExDepthTextChanged"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Height="28" Name="CameraModeLabel" Foreground="White">Camera Orientation</Label>
                    <ComboBox Grid.Row="1" Grid.Column="0" Height="28" SelectedIndex ="1" Name="comboBoxCamera" SelectionChanged="ComboBoxCameraSelectionChanged" Margin="2">
                        <ComboBoxItem>XYZ_Mixed</ComboBoxItem>
                        <ComboBoxItem>ZXY_Extrinsic</ComboBoxItem>
                    </ComboBox>
                    <Label Grid.Row="2" Grid.Column="0" Height="28" Name="label6" Foreground="White">Projection type</Label>
                    <ComboBox  Grid.Row="3" Grid.Column="0" Height="28" SelectedIndex ="2" Name="comboBoxProjection" SelectionChanged="ComboBoxProjectionSelectionChanged" Margin="2">
                        <ComboBoxItem>Orthographic</ComboBoxItem>
                        <ComboBoxItem>Orthographic Legacy</ComboBoxItem>
                        <ComboBoxItem>Perspective</ComboBoxItem>
                    </ComboBox>
                    <Label Grid.Row="4" Grid.Column="0" Height="28" Name="label5" Foreground="White">Vertical rotation (pitch)</Label>
                    <Slider Grid.Row="5" Grid.Column="0" Name="sliderVerticalRotation" Maximum="90" Minimum="-90" Margin="0,0,50,0"/>
                    <Label Grid.Row="6" Grid.Column="0" Height="28" Name="label7" Foreground="White">Horizontal rotation (yaw)</Label>
                    <Slider Grid.Row="7" Grid.Column="0" Name="sliderHorizontalRotation" Maximum="180" Minimum="-180" Margin="0,0,50,0"/>
                    <Label Grid.Row="8" Grid.Column="0" Height="28" Name="label8" Foreground="White">Side rotation (roll)</Label>
                    <Slider Grid.Row="9" Grid.Column="0" Name="sliderSideRotation" Maximum="180" Minimum="-180" Margin="0,0,50,0"/>
                    <Label Grid.Row="10" Grid.Column="0" Height="28" Name="label9" Foreground="White">Distance</Label>
                    <Slider Grid.Row="11" Grid.Column="0" Name="sliderDistance" Minimum="10" Maximum="2000" Cursor="" Margin="0,0,50,0"/>
                    <TextBox x:Name="tbVerticalRotation" HorizontalAlignment="Right" Margin="0,0,5,0" Grid.Row="5" TextWrapping="Wrap" Width="35" TextChanged="TbVerticalRotationTextChanged"/>
                    <TextBox x:Name="tbHorizontalRotation" HorizontalAlignment="Right" Margin="0,0,5,0" Grid.Row="7" TextWrapping="Wrap" Width="35" TextChanged="TbHorizontalRotationTextChanged"/>
                    <TextBox x:Name="tbSideRotation" HorizontalAlignment="Right" Height="18" Margin="0,0,5,0" Grid.Row="9" TextWrapping="Wrap" VerticalAlignment="Top" Width="35" TextChanged="TbSideRotationTextChanged"/>
                    <TextBox x:Name="tbDistance" HorizontalAlignment="Right" Height="18" Margin="0,0,5,0" Grid.Row="11" TextWrapping="Wrap" VerticalAlignment="Top" Width="35" TextChanged="TbDistanceTextChanged"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
