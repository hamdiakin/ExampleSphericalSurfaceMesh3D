<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:lcusb="http://schemas.lightningchart.com/chartingMVVM/"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d" 
        Title="Demo - Combined Charts" Height="600" Width="1200" Background="#202020">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Control Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8" Background="#2A2A2A">
            <Label Content="Data Points:" Foreground="White" VerticalAlignment="Center" Margin="8,0,4,0"/>
            <TextBox Name="txtDataPointCount" Width="60" Text="50" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <Button Name="btnGenerate" Content="Generate Dataset" Click="BtnGenerate_Click" Margin="0,0,8,0" Padding="8,4"/>
            <Separator Margin="8,0"/>
            <CheckBox Name="chkMouseTracking" Content="Mouse Tracking" IsChecked="True" Foreground="White" VerticalAlignment="Center" Margin="8,0,8,0" Checked="ChkMouseTracking_Checked" Unchecked="ChkMouseTracking_Unchecked"/>
            <Label Name="lblPointCount" Content="Points: 0" Foreground="White" VerticalAlignment="Center" Margin="8,0"/>
        </StackPanel>
        
        <!-- Split Screen: Two Charts -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left: Surface Chart (3D) -->
            <Grid Grid.Column="0" Name="gridSurfaceChart" Background="#1A1A1A">
                <Grid Name="gridSurfaceChartContainer"/>
            </Grid>
            
            <!-- Divider -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="Gray"/>
            
            <!-- Right: Polar Chart -->
            <Grid Grid.Column="2" Name="gridPolarChart" Background="#1A1A1A">
                <lcusb:LightningChart 
                    ActiveView="ViewPolar" 
                    ChartName="Polar Vector Chart"
                    x:Name="polarChart"
                    MouseLeftButtonDown="PolarChart_MouseLeftButtonDown"
                    KeyDown="PolarChart_KeyDown">
                    <lcusb:LightningChart.ViewPolar>
                        <lcusb:ViewPolar>
                            <lcusb:ViewPolar.LegendBox>
                                <lcusb:LegendBoxPolar Visible="False"/>
                            </lcusb:ViewPolar.LegendBox>                    
                        </lcusb:ViewPolar>
                    </lcusb:LightningChart.ViewPolar>
                </lcusb:LightningChart>
            </Grid>
        </Grid>
    </Grid>
</Window>

